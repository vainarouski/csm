{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {

    "channel": {
      "type": "array",
      "items": {
        "enum": ["movie", "game", "tv", "app", "music", "book", "website"]
        },
      "minItems": 1,
      "maxItems": 1
      },

    "summary": {
      "type": "string",
      "minLength": 2
    },

    "url": {
      "url": "string",
      "pattern": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{2,256}\\.[a-z]{2,6}\\b([-a-zA-Z0-9@:%_\\+.~#?&//=]*)"
    },

    "id": {
      "type": "integer"
    },

    "updated": {
      "type": "integer"
    },

    "title": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },

    "created": {
      "type": "integer"
    },

    "author": {
      "enum": ["Common Sense Media"]
    },

    "reviews": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {

          "title": {
            "type": "string",
            "minLength": 2
          },

          "slider": {
            "type": "object",
            "properties": {

              "status": {
                "enum": ["on", "off", "pause", "nfk"]
              },

              "not_for_kids": {
                "type": "integer",
                "minimum": 0,
                "maximum": 1
              },

              "text": {
                "type": "string",
                "minLength": 2
              },

              "off_age": {
                "type": "integer",
                "minimum": 2,
                "maximum": 17
              },

              "on_age": {
                "type": "integer",
                "minimum": 2,
                "maximum": 17
              },

              "target_age": {
                "type": "integer",
                "minimum": 2,
                "maximum": 17
              }
            },

            "required": [ "status", "text", "off_age", "on_age", "target_age"],
            "additionalProperties": false
          },

          "id": {
            "type": "integer"
          },

          "url": {
            "url": "string",
            "pattern": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{2,256}\\.[a-z]{2,6}\\b([-a-zA-Z0-9@:%_\\+.~#?&//=]*)"
          },

          "summary": {
            "type": "string",
            "minLength": 2
          }
        },

        "required": [ "title", "id"],
        "additionalProperties": false
      },
      "minItems": 1,
      "uniqueItems": true
    },


    "otherPicks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {

          "title": {
            "type": "string",
            "minLength": 2
          },

          "id": {
            "type": "integer"
          },

          "url": {
            "url": "string",
            "pattern": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{2,256}\\.[a-z]{2,6}\\b([-a-zA-Z0-9@:%_\\+.~#?&//=]*)"
          },

          "summary": {
            "type": "string",
            "minLength": 2
          }
        },

        "required": [ "title", "id"],
        "additionalProperties": false
      },
      "minItems": 1,
      "uniqueItems": true
    },

    "intro": {
      "type": "string",
      "minLength": 2
    },


    "categories": {
      "type": "object",
      "patternProperties": {
        "^[0-9]+$": {
          "enum": ["Movies", "Games", "TV", "Apps", "Musics", "Books", "Websites"]
        }
      }
    },

    "ages": {
      "type": "object",
      "properties": {
        "min":{
          "type": "integer",
          "minimum": 1,
          "maximum": 17
        },
        "max": {
          "type": "integer",
          "minimum": 1,
          "maximum": 17
        }
      },
      "required": [ "min", "max"],
      "additionalProperties": false
    }
  },
  "required": [
    "channel",
    "summary",
    "url",
    "id",
    "updated",
    "title",
    "created",
    "author",
    "reviews",
    "otherPicks",
    "intro",
    "categories",
    "ages"
  ],
  "additionalProperties": false
}